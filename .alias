function ollama_bootstrap() {
    local models=("deepseek-r1" "llama3.2")

    for model in "${models[@]}"; do
        echo "ğŸ“¥ Pulling model: $model ..."
        sudo docker exec ollama ollama pull "$model"
        if [[ $? -eq 0 ]]; then
            echo "âœ… Model '$model' pulled successfully."
        else
            echo "âŒ Failed to pull model '$model'."
        fi
    done
}


function ollama_preload() {
    local models=("deepseek-r1" "llama3.2")

    for model in "${models[@]}"; do
        echo "âš™ï¸ Loading model '$model' into memory..."
        sudo docker exec ollama ollama run "$model" <<< "Hello"
        if [[ $? -eq 0 ]]; then
            echo "âœ… Model '$model' loaded successfully."
        else
            echo "âŒ Failed to load model '$model'."
        fi
    done
}

function ollama_chat() {
    if [[ $# -lt 2 ]]; then
        echo "âŒ Usage: ollama_chat <model> <prompt>"
        echo "ğŸ‘‰ Example: ollama_chat deepseek-r1 'Write a Python function to sort a list.'"
        return 1
    fi

    local model="$1"
    shift
    local prompt="$*"

    echo "ğŸ§  Chatting with model '$model'..."
    sudo docker exec -i ollama ollama run "$model" <<< "$prompt"
}

