function update() {
    echo "ğŸ”„ Checking for updates..."

    # Update system packages
    sudo pacman -Syu
    pacman_status=$?

    if [[ $pacman_status -eq 0 ]]; then
        if pacman -Qu | grep -q .; then
            echo "âœ… System packages updated successfully!"
        else
            echo "â„¹ï¸ No updates available for system packages."
        fi
    else
        echo "âŒ Failed to update system packages!"
        return 1
    fi

    # Check if yay is installed
    if command -v yay &>/dev/null; then
        echo "ğŸ”„ Checking for AUR updates..."
        yay -Syu
        yay_status=$?

        if [[ $yay_status -eq 0 ]]; then
            if yay -Qu | grep -q .; then
                echo "âœ… AUR packages updated successfully!"
            else
                echo "â„¹ï¸ No updates available for AUR packages."
            fi
        else
            echo "âŒ Failed to update AUR packages!"
            return 1
        fi
    else
        echo "âš ï¸ yay is not installed! Skipping AUR updates..."
    fi

    echo "ğŸ‰ System update process completed!"
}



# Install one or more packages
function install() {
    if [[ $# -eq 0 ]]; then
        echo "âŒ Please specify a package to install."
        return 1
    fi

    echo "ğŸ”„ Installing: $* ..."
    sudo pacman -S "$@"

    if [[ $? -eq 0 ]]; then
        echo "âœ… Installation successful!"
    else
        echo "âŒ Installation failed!"
    fi
}

# Remove a package
function remove() {
    if [[ $# -eq 0 ]]; then
        echo "âŒ Please specify a package to remove."
        return 1
    fi

    echo "ğŸ—‘ï¸ Removing: $* ..."
    sudo pacman -R "$@"

    if [[ $? -eq 0 ]]; then
        echo "âœ… Package removed successfully!"
    else
        echo "âŒ Failed to remove package!"
    fi
}

# Remove a package and its dependencies
function remove_deps() {
    if [[ $# -eq 0 ]]; then
        echo "âŒ Please specify a package to remove along with dependencies."
        return 1
    fi

    echo "ğŸ—‘ï¸ Removing package and dependencies: $* ..."
    sudo pacman -Rns "$@"

    if [[ $? -eq 0 ]]; then
        echo "âœ… Package and dependencies removed successfully!"
    else
        echo "âŒ Failed to remove package and dependencies!"
    fi
}

# Search for a package in the repositories
function search() {
    if [[ $# -eq 0 ]]; then
        echo "âŒ Please specify a package to search for."
        return 1
    fi

    echo "ğŸ” Searching for: $* ..."
    pacman -Ss "$@"

    if [[ $? -eq 0 ]]; then
        echo "âœ… Search completed!"
    else
        echo "âŒ Search failed!"
    fi
}

# List installed packages
